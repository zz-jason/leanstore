@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find dependencies required by public headers
# Threads is part of the PUBLIC interface in src/CMakeLists.txt
find_dependency(Threads)

# libaio is a public dependency (included in headers)
# We use PkgConfig to find it, or assume it's available as a system library if PkgConfig fails/isn't used.
find_package(PkgConfig)
if(PKG_CONFIG_FOUND)
  pkg_check_modules(LIBAIO QUIET libaio)
endif()

# We don't enforce LIBAIO_FOUND because on some systems it might be provided implicitly or via other means.
# But downstream users generally need to link against it. The 'aio' target in INTERFACE_LINK_LIBRARIES 
# handles the linking if it resolves to -laio.

include("${CMAKE_CURRENT_LIST_DIR}/leanstoreTargets.cmake")

check_required_components(leanstore)