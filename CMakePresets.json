{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_SHARED_LIBS": "ON",
                "ENABLE_PROFILING": "ON"
            }
        },
        {
            "name": "base_debug",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "base_release",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "COUNTERS_LEVEL": "none"
            }
        },
        {
            "name": "debug",
            "inherits": "base_debug",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/dist/debug",
                "ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "debug_tsan",
            "inherits": "base_debug",
            "binaryDir": "${sourceDir}/build/debug_tsan",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/dist/debug_tsan",
                "ENABLE_TSAN": "ON",
                "ENABLE_COVERAGE": "ON"
            }
        },
        {
            "name": "release",
            "inherits": "base_release",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/dist/release"
            }
        },
        {
            "name": "performance",
            "inherits": "base_release",
            "binaryDir": "${sourceDir}/build/performance",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/dist/performance",
                "ENABLE_ROCKSDB": "ON",
                "ENABLE_WIRED_TIGER": "ON"
            }
        }
    ]
}
